= form_for @budget_year, html: { class: "form form-horizontal budget_year" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :budget, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :budget, class: 'form-control', required: true
    = f.error_span(:budget)
  .form-group
    = f.label :additional_budget, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :additional_budget, class: 'form-control', required: true
    = f.error_span(:additional_budget)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), budget_years_path, :class => 'btn btn-default'
