= form_for @financial_request, html: { class: "form form-horizontal financial_request" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :applicant, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :applicant, class: 'form-control'
    = f.error_span(:applicant)
  .form-group
    = f.label :requested_sum, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :requested_sum, class: 'form-control'
    = f.error_span(:requested_sum)
  .form-group
    = f.label :date, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :date, class: 'form-control', required: true
    = f.error_span(:date)
  .form-group
    = f.label :done, class: 'control-label col-lg-2'
    .col-lg-10
      = f.check_box :done, class: 'form-control'
    = f.error_span(:done)
  .form-group
    = f.label :agenda_item, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :agenda_item, class: 'form-control'
    = f.error_span(:agenda_item)
  .form-group
    = f.label :meeting_id, class: 'control-label col-lg-2'
    .col-lg-10
      = f.select :meeting_id, options_for_select(Meeting.all.map{ |m| [m.date, m.id]}, @financial_request.meeting_id), class: 'form-control', include_blank: true
    = f.error_span(:meeting_id)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), financial_requests_path, :class => 'btn btn-default'
